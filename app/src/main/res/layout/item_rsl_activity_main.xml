<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEDED">

            <ImageView
                android:id="@+id/img_photo_info"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/not_loaded_image" />

            <TextView
                android:id="@+id/txt_first_info"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:autoSizeTextType="uniform"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="Alexander"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_photo_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_phone_info"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:autoSizeTextType="uniform"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="+7-913-28-58-900"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_photo_info"
                app:layout_constraintTop_toBottomOf="@+id/txt_first_info"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_street"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:text="Street:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/img_photo_info"
                app:layout_constraintTop_toBottomOf="@+id/txt_phone_info"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_street_info"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="Pavlovskai"
                app:layout_constraintBottom_toBottomOf="@+id/txt_street"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_street"
                app:layout_constraintTop_toTopOf="@+id/txt_street" />


            <TextView
                android:id="@+id/txt_city"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:paddingHorizontal="5dp"
                android:text="City:"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txt_street"
                app:layout_constraintStart_toStartOf="@+id/txt_street"
                app:layout_constraintTop_toBottomOf="@+id/txt_street"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txt_city_info"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="Coastal Highway"
                app:layout_constraintBottom_toBottomOf="@+id/txt_city"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_city"
                app:layout_constraintTop_toTopOf="@+id/txt_city" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>